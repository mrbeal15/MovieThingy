<h2>Enter a new movie!</h2>

<%= form_for (@movie, :html => { :multipart => true}) do |f| %>

  <p>
   <%= f.label :title %><br />
   <%= f.text_field :title %>
  </p>
  <p>
   <%= f.label :director %><br />
   <%= f.text_field :director %>
  </p>
  <p>
   <%= f.label 'Release year' %><br />
   <%= f.text_field :release_year %>
  </p>
  <p>
   <%= f.label :runtime %><br />
   <%= f.text_field :runtime %>
  </p>
  <p>
   <%= f.label :mppa_rating %><br />
   <%= f.text_field :mppa_rating %>
  </p>
  <p>
   <%= f.label :cast %><br />
   <%= f.text_field :cast %>
  </p>
  <p>
   <%= f.label :genre_id %><br />
   <%= f.text_field :genre_id %>
  </p>
  <p>
   <%= f.label 'Title Photo' %><br />
   <%= f.file_field :title_photo %>
  </p>
  <p>
   <%= f.submit "Create" %>
  </p>
<% end %>
