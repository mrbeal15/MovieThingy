<h1>Reviews</h1>

<% @reviews.each do |rev| %>
  <h3><a href="/movies/<%= rev.movie_id %>/reviews/<%= rev.id %>"><%= rev.title %></a></h3>
  <p> <%= rev.content %> </p>
  <table>
    <tr>
      <th>Photography</th>
      <th>Directing</th>
      <th>Cast</th>
      <th>Score</th>
      <th>Overall Effect</th>
    </tr>
    <tr>
      <td><%= rev.photography %>/5</td>
      <td><%= rev.directing %>/5</td>
      <td><%= rev.cast %>/5</td>
      <td><%= rev.score %>/5</td>
      <td><%= rev.overall_effect %>/5</td>
    </tr>
    <tr>
      <td><%= rev.user.username %></td>
      <td>Trusted User: <%= rev.user.trusted? %>
  </table>

  <p> <%= image_tag rev.photo_1.url(:medium) %> </p>

<% end %>
