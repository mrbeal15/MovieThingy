<h1>Reviews For <%= @reviews.first.movie.title %> </h1>

<% @reviews.each do |rev| %>
  <h3> <%= rev.title %> </h3>
  <p> <%= rev.content %> </p>
  <table>
    <tr>
      <th>Photography</th>
      <th>Directing</th>
      <th>Cast</th>
      <th>Score</th>
      <th>Overall Effect</th>
    </tr>
    <tr>
      <td><%= rev.photography %>/5</td>
      <td><%= rev.directing %>/5</td>
      <td><%= rev.cast %>/5</td>
      <td><%= rev.score %>/5</td>
      <td><%= rev.overall_effect %>/5</td>
    </tr>
  </table>

  <p> <%= image_tag rev.photo_1.url(:medium) %> </p>

<% end %>
